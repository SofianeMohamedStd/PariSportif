{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block body %}
    {% include "commonPart/header.html.twig" %}
<div class="content-body">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-md-6 contents">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="form-block">
                            <div class="mb-4 mt-xl-5">
                                <h3>Sign In to <strong>Pari Sportif</strong></h3>
                            </div>
                    <form class="mt-xl-5" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                        <label class="mt-xl-5" for="inputEmail"><h5>Email</h5></label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label for="inputPassword"><h5>Password</h5></label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                        <button class="btn btn-lg btn-primary mt-xl-5" type="submit">
                            Se connecter
                        </button>
                    </form>
                        <a class="navbar-brand mt-xl-5" href="{{ path('app_forgot_password_request') }}">forgot password ?</a>
                            <span class="d-block text-center my-4 mt-xl-5 text-muted"> <strong>or</strong>
                                        <a class="navbar-brand" href="{{ path('user_registration') }}">
                                            <strong>Register</strong>
                                        </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
