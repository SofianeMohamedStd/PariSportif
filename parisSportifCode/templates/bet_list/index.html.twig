{% extends 'base.html.twig' %}

{% block title %}Hello BetListController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
  {% include "commonPart/header.html.twig" %}
    {% include "commonPart/menu.html.twig" %}

<div class="example-wrapper">
<section class="container-fluid" id="page-content">
        <div class="row">
            {% include "commonPart/sportListLeft.html.twig" %}
            <div class="col-sm-12 col-md-6">
                <section class="central">
                    <div class="container-fluid p-0">
                        <div class="row mt-4">
                            <div class="col-sm-12 mt-4 bet-board card p-2">
                                <h3>Liste des Paris en cours</h3>
                                <table class="table table-hover fw-bold">
                                    <thead>
                                    <tr>
                                        <th scope="col" colspan="2">Paris en cours</th>
                                        <th class="text-center" scope="col"></th>
                                        <th class="text-center" scope="col"></th>
                                        <th class="text-center" scope="col"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for eachbet in betsUser %}
                                        <tr>
                                            <td class="" colspan="2">
                                                <p>
                                                    Évènement : {{ eachbet.bet.evenement.name }}<br>
                                                    Pari en cours : {{ eachbet.bet.nameBet }}<br>
                                                    Montant parié : {{ eachbet.amountbet }}, gain possible : {{ eachbet.gainpossible }}<br>
                                                </p>
                                            </td>
                                            <td class="text-center">
                                                <a type="button" class="btn btn-danger btn-sm"  href="betmodifier{{eachbet.id}}">Modifier ou supprimer le pari</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
    
{% include "commonPart/returnToMain.html.twig" %}

</div>
{% endblock %}
