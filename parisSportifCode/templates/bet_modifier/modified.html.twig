{% extends 'base.html.twig' %}

{% block title %}Hello BetModifierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

  {% include "commonPart/header.html.twig" %}
    {% include "commonPart/menu.html.twig" %}

<div class="example-wrapper">
<section class="container-fluid" id="page-content">
        <div class="row">
            {% include "commonPart/sportListLeft.html.twig" %}
            <div class="col-sm-12 col-md-6">
                <section class="central">
                    <div class="container-fluid p-0">
                        <div class="row mt-4">
                            <div class="col-sm-12 mt-4 bet-board card p-2">
                                <h3>Modification du pari</h3>
                                <table class="table table-hover fw-bold">
                                    <thead>
                                    <tr>
                                        <th scope="col" colspan="2">Paris en cours</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if targetBet is not empty %}
                                        <tr>
                                            <td class="" colspan="2">
                                                <p>
                                                    Le nouveau montant de votre pari est : {{ nouveauMontant }}<br>
                                                    Gain possible : {{ targetBet.gainpossible }}
                                                </p>
                                            </td>
                                        </tr>
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
    
{% include "commonPart/returnToBetList.html.twig" %}
{% include "commonPart/returnToMain.html.twig" %}
</div>
{% endblock %}
