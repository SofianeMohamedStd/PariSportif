{% extends 'base.html.twig' %}

{% block title %}Hello BetModifierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Modification du pari</h1>
    
    {% if targetBet is not empty %}
    <a>ID pari : {{ targetBet.id }}</a>
    </br>
    <a>Pari en cours : {{ targetBet.bet.nameBet }}, pour l'évènement : {{ targetBet.bet.evenement.name }} </a>
    </br>
    <a>Montant parié : {{ targetBet.amountbet }}, gain possible : {{ targetBet.gainpossible }} </a>
    </br>
    </br> 
        <form class="ui form" action="modifiedamount{{ targetBet.id }}" method="get">

            <div class="field">
                <label>Montant :</label>
                <input type="number" name="montant">
            </div>

            <div class="field">
                <input type="hidden" name="modifiedamount" value="{{ targetBet.id }}">
            </div>

            <button class="ui button" type="submit">Modifier le montant</button>

        </form>
    </br> 
    </br> 
    <a href="betdeletionconfirmation{{targetBet.id}}">Annuler le pari</a>
    </br>
    </br>
    <a href="{{ path('bet_list') }}">Retour aux paris</a>
    </br>
    {% endif %}
   
</div>
{% endblock %}
